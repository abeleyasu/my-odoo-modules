<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to auto-delete old trash (30 days) -->
        <record id="ir_cron_office_auto_delete_trash" model="ir.cron">
            <field name="name">Office Document: Auto-delete old trash</field>
            <field name="model_id" ref="model_office_document"/>
            <field name="state">code</field>
            <field name="code">model.auto_delete_old_trash()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
