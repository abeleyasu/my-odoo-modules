<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- APPOINTMENT BOOKING VIEWS -->
    <!-- ============================================ -->

    <!-- Booking Form View -->
    <record id="appointment_booking_view_form" model="ir.ui.view">
        <field name="name">appointment.booking.form</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <form string="Appointment Booking">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            class="oe_highlight" invisible="state != 'scheduled'"/>
                    <button name="action_mark_completed" type="object" string="Mark Complete" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ['cancelled', 'completed']"/>
                    <button name="action_mark_no_show" type="object" string="No Show" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_reschedule" type="object" string="Reschedule"
                            invisible="state not in ['scheduled', 'confirmed']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pending,scheduled,confirmed,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_calendar_event" type="object" 
                                class="oe_stat_button" icon="fa-calendar"
                                invisible="not calendar_event_id">
                            <span class="o_stat_text">Calendar Event</span>
                        </button>
                        <button name="action_send_reminder" type="object"
                                class="oe_stat_button" icon="fa-envelope"
                                invisible="state != 'confirmed'">
                            <span class="o_stat_text">Send Reminder</span>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Event Details">
                            <field name="appointment_type_id"/>
                            <field name="user_id"/>
                            <field name="start"/>
                            <field name="stop"/>
                            <field name="duration"/>
                            <field name="timezone"/>
                        </group>
                        <group string="Invitee">
                            <field name="partner_id"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Location">
                            <field name="location_type"/>
                            <field name="location" invisible="location_type == 'online'"/>
                            <field name="video_link" invisible="location_type != 'online'" 
                                   widget="url"/>
                        </group>
                        <group string="Calendar">
                            <field name="calendar_event_id"/>
                            <field name="source"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <!-- Answers Tab -->
                        <page string="Form Responses" name="answers" 
                              invisible="not answer_ids">
                            <field name="answer_ids" mode="list">
                                <list create="0" delete="0" edit="0">
                                    <field name="question_id"/>
                                    <field name="value_text"/>
                                </list>
                            </field>
                        </page>
                        
                        <!-- Notes Tab -->
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes from invitee..."/>
                        </page>
                        
                        <!-- Internal Notes Tab -->
                        <page string="Internal Notes" name="internal">
                            <field name="internal_notes" nolabel="1" 
                                   placeholder="Internal notes (not visible to invitee)..."/>
                        </page>
                        
                        <!-- Cancellation Tab -->
                        <page string="Cancellation" name="cancellation"
                              invisible="state != 'cancelled'">
                            <group>
                                <field name="cancel_reason"/>
                                <field name="cancelled_by"/>
                                <field name="cancel_date"/>
                            </group>
                        </page>
                        
                        <!-- Email Tracking Tab (Enterprise Feature) -->
                        <page string="Email Status" name="email_tracking">
                            <group>
                                <group string="Notifications Sent">
                                    <field name="host_notified"/>
                                    <field name="reminder_sent"/>
                                    <field name="reminder_sent_date" invisible="not reminder_sent"/>
                                    <field name="followup_sent"/>
                                    <field name="followup_sent_date" invisible="not followup_sent"/>
                                </group>
                                <group string="Actions">
                                    <button name="action_send_reminder" type="object"
                                            string="Send Reminder Now"
                                            class="btn-secondary"
                                            invisible="state != 'confirmed' or reminder_sent"/>
                                    <button name="action_send_followup" type="object"
                                            string="Send Follow-up Now"
                                            class="btn-secondary"
                                            invisible="state != 'completed' or followup_sent"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Group Attendees Tab -->
                        <page string="Attendees" name="attendees"
                              invisible="not is_group_booking">
                            <group>
                                <group>
                                    <field name="attendee_count"/>
                                    <field name="remaining_seats"/>
                                </group>
                            </group>
                            <field name="attendee_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="confirmed"/>
                                </list>
                            </field>
                        </page>
                        
                        <!-- Recurring Tab -->
                        <page string="Recurring" name="recurring"
                              invisible="not is_recurring">
                            <group>
                                <group>
                                    <field name="recurring_pattern"/>
                                    <field name="recurring_count"/>
                                    <field name="recurring_index"/>
                                </group>
                                <group>
                                    <field name="recurring_parent_id" invisible="not recurring_parent_id"/>
                                </group>
                            </group>
                            <field name="recurring_child_ids" invisible="not recurring_child_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="start"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Booking Tree View -->
    <record id="appointment_booking_view_tree" model="ir.ui.view">
        <field name="name">appointment.booking.tree</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <list string="Bookings" decoration-success="state == 'confirmed'"
                  decoration-muted="state == 'cancelled'" 
                  decoration-info="state == 'scheduled'"
                  decoration-warning="state == 'pending'">
                <field name="name"/>
                <field name="appointment_type_id"/>
                <field name="partner_id"/>
                <field name="start"/>
                <field name="duration"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmed'"
                       decoration-info="state == 'scheduled'" decoration-warning="state == 'pending'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Booking Calendar View -->
    <record id="appointment_booking_view_calendar" model="ir.ui.view">
        <field name="name">appointment.booking.calendar</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="start" date_stop="stop" 
                      color="appointment_type_id" mode="week" quick_create="0"
                      event_open_popup="1" event_limit="5">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="appointment_type_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Booking Kanban View -->
    <record id="appointment_booking_view_kanban" model="ir.ui.view">
        <field name="name">appointment.booking.kanban</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="start"/>
                <field name="partner_id"/>
                <field name="appointment_type_id"/>
                <field name="state"/>
                <field name="video_link"/>
                <progressbar field="state" colors='{"pending": "warning", "scheduled": "info", "confirmed": "success", "cancelled": "danger"}'/>
                <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_content">
                            <field name="appointment_type_id" class="fw-bold d-block"/>
                            <div class="text-muted small mt-1">
                                <i class="fa fa-user me-1"/> <field name="partner_id"/>
                            </div>
                            <div class="text-muted small">
                                <i class="fa fa-clock-o me-1"/> 
                                <t t-if="record.start.raw_value">
                                    <t t-esc="record.start.value"/>
                                </t>
                            </div>
                            <div class="mt-2" t-if="record.video_link.raw_value">
                                <a t-att-href="record.video_link.raw_value" target="_blank" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-video-camera"/> Join
                                </a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Booking Search View -->
    <record id="appointment_booking_view_search" model="ir.ui.view">
        <field name="name">appointment.booking.search</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <search string="Search Bookings">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="appointment_type_id"/>
                <field name="user_id"/>
                <separator/>
                <filter name="my_bookings" string="My Bookings" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="upcoming" string="Upcoming" domain="[('start', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="today" string="Today" domain="[
                    ('start', '>=', context_today().strftime('%Y-%m-%d')),
                    ('start', '&lt;', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))
                ]"/>
                <filter name="this_week" string="This Week" domain="[
                    ('start', '>=', (context_today() - relativedelta(weekday=0)).strftime('%Y-%m-%d')),
                    ('start', '&lt;', (context_today() + relativedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))
                ]"/>
                <separator/>
                <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="scheduled" string="Scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_type" string="Event Type" context="{'group_by': 'appointment_type_id'}"/>
                    <filter name="group_by_user" string="Host" context="{'group_by': 'user_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'start:day'}"/>
                    <filter name="group_by_month" string="Month" context="{'group_by': 'start:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Booking Actions -->
    <record id="action_appointment_booking" model="ir.actions.act_window">
        <field name="name">Scheduled Events</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">calendar,kanban,list,form</field>
        <field name="search_view_id" ref="appointment_booking_view_search"/>
        <field name="context">{'search_default_my_bookings': 1, 'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No scheduled events yet
            </p>
            <p>
                When people book appointments with you, they will appear here.
            </p>
        </field>
    </record>

    <record id="action_appointment_booking_all" model="ir.actions.act_window">
        <field name="name">All Bookings</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">list,kanban,calendar,form</field>
        <field name="search_view_id" ref="appointment_booking_view_search"/>
        <field name="context">{}</field>
    </record>

    <!-- ============================================ -->
    <!-- APPOINTMENT INVITE VIEWS -->
    <!-- ============================================ -->

    <record id="appointment_invite_view_form" model="ir.ui.view">
        <field name="name">appointment.invite.form</field>
        <field name="model">appointment.invite</field>
        <field name="arch" type="xml">
            <form string="Invitation Link">
                <header>
                    <button name="action_send_invite" type="object" string="Send Invite" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_deactivate" type="object" string="Deactivate"
                            invisible="state in ('expired', 'scheduled')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="appointment_type_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="expires_at"/>
                            <field name="invitee_email"/>
                            <field name="invitee_name"/>
                        </group>
                    </group>
                    <group string="Invite Link">
                        <div class="alert alert-info" role="alert">
                            <strong>Share this link:</strong><br/>
                            <field name="invite_url" widget="CopyClipboardChar"/>
                        </div>
                    </group>
                    <group string="Personal Message">
                        <field name="message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="appointment_invite_view_tree" model="ir.ui.view">
        <field name="name">appointment.invite.tree</field>
        <field name="model">appointment.invite</field>
        <field name="arch" type="xml">
            <list string="Invitation Links">
                <field name="name"/>
                <field name="appointment_type_id"/>
                <field name="user_id"/>
                <field name="invitee_email"/>
                <field name="expires_at"/>
                <field name="state" widget="badge" decoration-success="state == 'sent'"
                       decoration-info="state == 'scheduled'" decoration-muted="state == 'expired'"/>
            </list>
        </field>
    </record>

    <record id="action_appointment_invite" model="ir.actions.act_window">
        <field name="name">Invitation Links</field>
        <field name="res_model">appointment.invite</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create shareable invitation links
            </p>
            <p>
                Invitation links allow you to share specific appointment types with expiration dates.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- QUESTION VIEWS -->
    <!-- ============================================ -->

    <record id="appointment_question_view_form" model="ir.ui.view">
        <field name="name">appointment.question.form</field>
        <field name="model">appointment.question</field>
        <field name="arch" type="xml">
            <form string="Question">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="question_type"/>
                        <field name="placeholder"/>
                        <field name="required"/>
                    </group>
                    <group>
                        <field name="appointment_type_id"/>
                        <field name="sequence"/>
                    </group>
                </group>
                <group string="Answer Options" 
                       invisible="question_type not in ('select', 'radio', 'checkbox')">
                    <field name="options" nolabel="1" 
                           placeholder="Enter one option per line"/>
                </group>
            </form>
        </field>
    </record>

    <record id="appointment_question_view_tree" model="ir.ui.view">
        <field name="name">appointment.question.tree</field>
        <field name="model">appointment.question</field>
        <field name="arch" type="xml">
            <list string="Questions">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="question_type"/>
                <field name="required"/>
                <field name="appointment_type_id"/>
            </list>
        </field>
    </record>

    <record id="action_appointment_question" model="ir.actions.act_window">
        <field name="name">Form Questions</field>
        <field name="res_model">appointment.question</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
