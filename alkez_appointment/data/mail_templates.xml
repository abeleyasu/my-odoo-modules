    <!-- Host Notification Email -->
    <record id="mail_template_host_notification" model="mail.template">
        <field name="name">Appointment: New Booking (Host Notification)</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="subject">New Booking: {{ object.appointment_type_id.name }} with {{ object.invitee_name }}</field>
        <field name="email_from">{{ (object.user_id.company_id.email_formatted or 'apps@mysourcedigitalmarketing.net') }}</field>
        <field name="email_to">{{ object.user_id.email }}</field>
        <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #f5f5f5; width: 100%;">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="background-color: white; border-radius: 8px; overflow: hidden; margin: 20px 0;">
                    <!-- Header -->
                    <tr>
                        <td style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); padding: 24px 32px; text-align: center;">
                            <h1 style="color: white; margin: 0; font-size: 20px; font-weight: 600;">üìÖ New Appointment Booked</h1>
                        </td>
                    </tr>
                    
                    <!-- Content -->
                    <tr>
                        <td style="padding: 32px;">
                            <p style="font-size: 16px; color: #1a1a1a; margin: 0 0 20px;">
