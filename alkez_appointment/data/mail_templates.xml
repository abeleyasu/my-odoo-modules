    <!-- ============================================ -->

    <!-- Booking Confirmation Email -->
    <record id="mail_template_booking_confirmation" model="mail.template">
        <field name="name">Appointment: Booking Confirmation</field>
        <field name="model_id" ref="model_appointment_booking"/>
        <field name="subject">Confirmed: {{ object.appointment_type_id.name }} with {{ object.user_id.name }}</field>
        <field name="email_from">{{ (object.user_id.company_id.email_formatted or 'apps@mysourcedigitalmarketing.net') }}</field>
        <field name="reply_to">{{ object.user_id.email }}</field>
        <field name="email_to">{{ object.invitee_email }}</field>
        <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #f5f5f5; width: 100%;">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="background-color: white; border-radius: 8px; overflow: hidden; margin: 20px 0;">
                    <!-- Header -->
                    <tr>
                        <td style="background: linear-gradient(135deg, #0069ff 0%, #0050c8 100%); padding: 40px 32px; text-align: center;">
                            <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; display: inline-flex; align-items: center; justify-content: center;">
                                <span style="font-size: 30px; color: white;">‚úì</span>
                            </div>
                            <h1 style="color: white; margin: 0 0 8px; font-size: 24px; font-weight: 600;">You're Scheduled!</h1>
                            <p style="color: rgba(255,255,255,0.9); margin: 0; font-size: 15px;">A calendar invitation has been sent to your email.</p>
                        </td>
                    </tr>
                    
                    <!-- Event Details -->
                    <tr>
                        <td style="padding: 32px;">
                            <h2 style="margin: 0 0 24px; font-size: 20px; color: #1a1a1a; font-weight: 600;">
                                <t t-out="object.appointment_type_id.name"/>
                            </h2>
                            
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <!-- Host -->
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e5e5;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="width: 40px; vertical-align: top;">
                                                    <div style="width: 32px; height: 32px; background: #e8f4ff; border-radius: 50%; text-align: center; line-height: 32px; color: #0069ff;">üë§</div>
                                                </td>
                                                <td>
                                                    <div style="font-size: 12px; color: #666; text-transform: uppercase; letter-spacing: 0.5px;">Host</div>
                                                    <div style="font-size: 15px; color: #1a1a1a; font-weight: 500;"><t t-out="object.user_id.name"/></div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                
                                <!-- Date & Time -->
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e5e5;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="width: 40px; vertical-align: top;">
                                                    <div style="width: 32px; height: 32px; background: #e8f4ff; border-radius: 50%; text-align: center; line-height: 32px; color: #0069ff;">üìÖ</div>
                                                </td>
                                                <td>
                                                    <div style="font-size: 12px; color: #666; text-transform: uppercase; letter-spacing: 0.5px;">Date &amp; Time</div>
                                                    <div style="font-size: 15px; color: #1a1a1a; font-weight: 500;">
                                                        <t t-out="format_datetime(object.start, dt_format='EEEE, MMMM d, y', tz=object.timezone)"/><br/>
                                                        <t t-out="format_time(object.start, time_format='short', tz=object.timezone)"/> - <t t-out="format_time(object.stop, time_format='short', tz=object.timezone)"/>
                                                    </div>
                                                    <div style="font-size: 13px; color: #666;"><t t-out="object.timezone"/></div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                
                                <!-- Duration -->
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e5e5;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="width: 40px; vertical-align: top;">
                                                    <div style="width: 32px; height: 32px; background: #e8f4ff; border-radius: 50%; text-align: center; line-height: 32px; color: #0069ff;">‚è±</div>
                                                </td>
                                                <td>
                                                    <div style="font-size: 12px; color: #666; text-transform: uppercase; letter-spacing: 0.5px;">Duration</div>
                                                    <div style="font-size: 15px; color: #1a1a1a; font-weight: 500;"><t t-out="object.appointment_type_id.duration_display"/></div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                
                                <!-- Location / Video -->
                                <tr>
                                    <td style="padding: 12px 0;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="width: 40px; vertical-align: top;">
                                                    <div style="width: 32px; height: 32px; background: #e8f4ff; border-radius: 50%; text-align: center; line-height: 32px; color: #0069ff;">
                                                        <t t-if="object.location_type == 'online'">üìπ</t>
                                                        <t t-else="">üìç</t>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div style="font-size: 12px; color: #666; text-transform: uppercase; letter-spacing: 0.5px;">Location</div>
                                                    <div style="font-size: 15px; color: #1a1a1a; font-weight: 500;">
                                                        <t t-if="object.location_type == 'online' and object.video_link">
                                                            <a t-att-href="object.video_link" style="color: #0069ff; text-decoration: none;">Join Video Call</a>
                                                        </t>
                                                        <t t-elif="object.location">
                                                            <t t-out="object.location"/>
                                                        </t>
                                                        <t t-elif="object.location_type == 'phone_outgoing'">
                                                            Phone call - We will call you
                                                        </t>
                                                        <t t-elif="object.location_type == 'phone_incoming'">
                                                            Phone call - Please call the host
                                                        </t>
                                                        <t t-else="">
                                                            Details provided upon confirmation
                                                        </t>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            
                            <!-- Video Join Button -->
                            <t t-if="object.location_type == 'online' and object.video_link">
                                <div style="text-align: center; margin-top: 24px;">
                                    <a t-att-href="object.video_link" style="display: inline-block; background: #0069ff; color: white; padding: 14px 32px; border-radius: 6px; text-decoration: none; font-weight: 600; font-size: 15px;">
                                        Join Video Call
                                    </a>
                                </div>
                            </t>
                        </td>
                    </tr>
                    
                    <!-- Actions -->
                    <tr>
                        <td style="padding: 0 32px 32px;">
                            <div style="background: #f9f9f9; border-radius: 8px; padding: 20px; text-align: center;">
                                <p style="margin: 0 0 12px; font-size: 14px; color: #666;">Need to make changes?</p>
                                <a t-att-href="object.reschedule_url" style="color: #0069ff; text-decoration: none; font-size: 14px; margin-right: 16px;">Reschedule</a>
                                <a t-att-href="object.cancel_url" style="color: #666; text-decoration: none; font-size: 14px;">Cancel</a>
                            </div>
                        </td>
                    </tr>
                    
                    <!-- Footer -->
                    <tr>
                        <td style="padding: 20px 32px; background: #f9f9f9; border-top: 1px solid #e5e5e5;">
                            <p style="margin: 0; font-size: 12px; color: #999; text-align: center;">
                                This email was sent by <t t-out="object.user_id.company_id.name or 'Appointment System'"/>
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
</field>
        <field name="auto_delete" eval="False"/>
    </record>

