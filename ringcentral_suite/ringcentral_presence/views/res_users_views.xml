<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend User Form View -->
    <record id="res_users_view_form_ringcentral_presence" model="ir.ui.view">
        <field name="name">res.users.form.ringcentral.presence</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_set_presence" type="object"
                        string="Set Available" 
                        context="{'default_status': 'available'}"
                        groups="ringcentral_base.group_ringcentral_user"/>
            </xpath>
        </field>
    </record>
</odoo>
