<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ================================== -->
        <!-- RingCentral Sync Cron Jobs -->
        <!-- ================================== -->
        
        <!-- Full Sync Cron - Every 6 hours -->
        <record id="cron_ringcentral_full_sync" model="ir.cron">
            <field name="name">RingCentral: Full Data Sync</field>
            <field name="model_id" ref="model_ringcentral_sync_service"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_companies()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>
        
        <!-- Quick Extension Sync - Every hour -->
        <record id="cron_ringcentral_extension_sync" model="ir.cron">
            <field name="name">RingCentral: Extension Sync (Quick)</field>
            <field name="model_id" ref="model_ringcentral_sync_service"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_extensions_only()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
            <field name="priority">20</field>
        </record>
        
    </data>
</odoo>
