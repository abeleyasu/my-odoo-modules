<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================== -->
        <!-- RingCentral Extension Views -->
        <!-- ================================== -->
        
        <!-- Tree View -->
        <record id="view_ringcentral_extension_tree" model="ir.ui.view">
            <field name="name">ringcentral.extension.tree</field>
            <field name="model">ringcentral.extension</field>
            <field name="arch" type="xml">
                <list string="RingCentral Extensions">
                    <field name="name"/>
                    <field name="extension_number"/>
                    <field name="extension_type"/>
                    <field name="status" decoration-success="status == 'Enabled'" 
                           decoration-warning="status == 'NotActivated'" 
                           decoration-danger="status == 'Disabled'"/>
                    <field name="email"/>
                    <field name="user_id"/>
                    <field name="primary_phone"/>
                    <field name="last_sync_date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        
        <!-- Form View -->
        <record id="view_ringcentral_extension_form" model="ir.ui.view">
            <field name="name">ringcentral.extension.form</field>
            <field name="model">ringcentral.extension</field>
            <field name="arch" type="xml">
                <form string="RingCentral Extension">
                    <header>
                        <button name="action_sync_from_ringcentral" string="Sync from RingCentral" 
                                type="object" class="btn-primary" icon="fa-refresh"
                                groups="ringcentral_multiline.group_ringcentral_manager"/>
                        <button name="action_link_to_user" string="Link to User" 
                                type="object" icon="fa-user-plus"
                                invisible="user_id"
                                groups="ringcentral_multiline.group_ringcentral_manager"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_phone_numbers" type="object"
                                    class="oe_stat_button" icon="fa-phone">
                                <field name="phone_number_count" widget="statinfo" string="Phone Numbers"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Disabled" bg_color="bg-danger" invisible="status != 'Disabled'"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Extension Name"/>
                            </h1>
                            <h3>
                                <span>Ext. </span>
                                <field name="extension_number" class="oe_inline"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Extension Info">
                                <field name="rc_extension_id" readonly="1"/>
                                <field name="extension_type"/>
                                <field name="status"/>
                                <field name="email"/>
                                <field name="contact_phone"/>
                            </group>
                            <group string="Odoo Integration">
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="primary_phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Phone Numbers" name="phone_numbers">
                                <field name="phone_number_ids">
                                    <list>
                                        <field name="phone_number"/>
                                        <field name="formatted_number"/>
                                        <field name="usage_type"/>
                                        <field name="can_be_caller_id"/>
                                        <field name="can_send_sms"/>
                                        <field name="is_primary"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Sync Data" name="sync_data" groups="ringcentral_multiline.group_ringcentral_manager">
                                <group>
                                    <field name="last_sync_date"/>
                                    <field name="rc_data_json" widget="json"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_ringcentral_extension_search" model="ir.ui.view">
            <field name="name">ringcentral.extension.search</field>
            <field name="model">ringcentral.extension</field>
            <field name="arch" type="xml">
                <search string="Search Extensions">
                    <field name="name"/>
                    <field name="extension_number"/>
                    <field name="email"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter name="filter_enabled" string="Enabled" domain="[('status', '=', 'Enabled')]"/>
                    <filter name="filter_user_type" string="User Extensions" domain="[('extension_type', 'in', ['User', 'VirtualUser'])]"/>
                    <filter name="filter_queue_type" string="Call Queues" domain="[('extension_type', '=', 'Department')]"/>
                    <filter name="filter_not_linked" string="Not Linked to User" domain="[('user_id', '=', False), ('extension_type', 'in', ['User', 'VirtualUser'])]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_type" string="Extension Type" context="{'group_by': 'extension_type'}"/>
                        <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                        <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_ringcentral_extension" model="ir.actions.act_window">
            <field name="name">RingCentral Extensions</field>
            <field name="res_model">ringcentral.extension</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ringcentral_extension_search"/>
            <field name="context">{'search_default_filter_enabled': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No RingCentral extensions found
                </p>
                <p>
                    Extensions will be synced from your RingCentral account.
                    Click the "Sync" button in Settings to import them.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
