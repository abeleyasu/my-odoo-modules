<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================== -->
        <!-- Company Form Extension -->
        <!-- ================================== -->
        
        <record id="view_company_form_ringcentral_multiline" model="ir.ui.view">
            <field name="name">res.company.form.ringcentral.multiline</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="RingCentral Multi-line" name="ringcentral_multiline" 
                          groups="ringcentral_multiline.group_ringcentral_manager">
                        
                        <!-- Dashboard Stats -->
                        <div class="row mb-4">
                            <div class="col-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3><field name="ringcentral_extension_count"/></h3>
                                        <p class="mb-0">Extensions</p>
                                        <button name="action_view_extensions" type="object" 
                                                class="btn btn-link btn-sm">View All</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3><field name="ringcentral_phone_number_count"/></h3>
                                        <p class="mb-0">Phone Numbers</p>
                                        <button name="action_view_phone_numbers" type="object" 
                                                class="btn btn-link btn-sm">View All</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3><field name="ringcentral_call_queue_count"/></h3>
                                        <p class="mb-0">Call Queues</p>
                                        <button name="action_view_call_queues" type="object" 
                                                class="btn btn-link btn-sm">View All</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3><field name="ringcentral_app_config_count"/></h3>
                                        <p class="mb-0">App Configs</p>
                                        <button name="action_view_app_configs" type="object" 
                                                class="btn btn-link btn-sm">View All</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <button name="action_sync_ringcentral_data" type="object" 
                                        class="btn btn-primary me-2" icon="fa-refresh">
                                    Sync from RingCentral
                                </button>
                                <button name="action_auto_link_users" type="object" 
                                        class="btn btn-secondary me-2" icon="fa-user-plus">
                                    Auto-Link Users
                                </button>
                                <button name="action_auto_link_departments" type="object" 
                                        class="btn btn-secondary me-2" icon="fa-building">
                                    Auto-Link Departments
                                </button>
                                <button name="action_quick_setup_wizard" type="object" 
                                        class="btn btn-success" icon="fa-magic">
                                    Quick Setup
                                </button>
                            </div>
                        </div>
                        
                        <group>
                            <group string="Multi-line Settings">
                                <field name="ringcentral_multiline_enabled"/>
                                <field name="ringcentral_context_aware_routing"/>
                                <field name="ringcentral_allow_user_caller_id"/>
                                <field name="ringcentral_enable_from_number_setting"/>
                            </group>
                            <group string="Sync Settings">
                                <field name="ringcentral_auto_sync_enabled"/>
                                <field name="ringcentral_sync_interval_hours"/>
                                <field name="ringcentral_last_full_sync"/>
                            </group>
                        </group>
                        
                        <group string="Fallback Numbers">
                            <field name="ringcentral_main_number_id"/>
                            <field name="ringcentral_fallback_number_id"/>
                        </group>
                        
                    </page>
                </notebook>
            </field>
        </record>
        
        <!-- ================================== -->
        <!-- Settings Page Extension -->
        <!-- ================================== -->
        
        <record id="res_config_settings_view_form_ringcentral_multiline" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.ringcentral.multiline</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="RingCentral" string="RingCentral" name="ringcentral_multiline" 
                         groups="ringcentral_multiline.group_ringcentral_manager">
                        <block title="Multi-line Configuration" name="ringcentral_multiline_config">
                            <setting string="Multi-line Calling" help="Use different phone numbers for different apps">
                                <field name="ringcentral_multiline_enabled"/>
                            </setting>
                            <setting string="Context-Aware Routing" help="Automatically select caller ID based on current app">
                                <field name="ringcentral_context_aware_routing"/>
                            </setting>
                            <setting string="User Caller ID Selection" help="Allow users to choose their own caller ID">
                                <field name="ringcentral_allow_user_caller_id"/>
                            </setting>
                        </block>
                        <block title="Sync Settings" name="ringcentral_sync_settings">
                            <setting string="Auto Sync" help="Automatically sync data from RingCentral">
                                <field name="ringcentral_auto_sync_enabled"/>
                            </setting>
                            <setting string="Sync Interval" help="Hours between automatic syncs">
                                <field name="ringcentral_sync_interval_hours"/>
                            </setting>
                            <div class="mt16">
                                <button name="action_sync_ringcentral_data" type="object" 
                                        string="Sync Now" class="btn-primary" icon="fa-refresh"/>
                            </div>
                        </block>
                        <block title="Quick Actions" name="ringcentral_quick_actions">
                            <div>
                                <button name="%(action_ringcentral_extension)d" type="action" 
                                        string="Manage Extensions" class="btn-link" icon="fa-phone"/>
                            </div>
                            <div>
                                <button name="%(action_ringcentral_phone_number)d" type="action" 
                                        string="Manage Phone Numbers" class="btn-link" icon="fa-hashtag"/>
                            </div>
                            <div>
                                <button name="%(action_ringcentral_call_queue)d" type="action" 
                                        string="Manage Call Queues" class="btn-link" icon="fa-users"/>
                            </div>
                            <div>
                                <button name="%(action_ringcentral_app_config)d" type="action" 
                                        string="Configure App Numbers" class="btn-link" icon="fa-cog"/>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
