<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Configuration Parameters -->
    
    <record id="config_ringcentral_api_version" model="ir.config_parameter">
        <field name="key">ringcentral.api_version</field>
        <field name="value">v1.0</field>
    </record>
    
    <record id="config_ringcentral_retry_max" model="ir.config_parameter">
        <field name="key">ringcentral.retry_max</field>
        <field name="value">3</field>
    </record>
    
    <record id="config_ringcentral_retry_delay" model="ir.config_parameter">
        <field name="key">ringcentral.retry_delay</field>
        <field name="value">1</field>
    </record>
    
    <record id="config_ringcentral_log_retention_days" model="ir.config_parameter">
        <field name="key">ringcentral.log_retention_days</field>
        <field name="value">30</field>
    </record>
    
</odoo>
