<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Lead Form View -->
    <record id="crm_lead_view_form_ringcentral" model="ir.ui.view">
        <field name="name">crm.lead.form.ringcentral</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add communication buttons to button box -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_calls" type="object" class="oe_stat_button" icon="fa-phone" groups="ringcentral_base.group_ringcentral_user">
                    <field name="call_count" widget="statinfo" string="Calls"/>
                </button>
                <button name="action_view_sms" type="object" class="oe_stat_button" icon="fa-comment" groups="ringcentral_base.group_ringcentral_user">
                    <field name="sms_count" widget="statinfo" string="SMS"/>
                </button>
            </xpath>
            
            <!-- Add quick action buttons -->
            <xpath expr="//header" position="inside">
                <button name="action_call" type="object" string="Call" class="btn-primary" icon="fa-phone" groups="ringcentral_base.group_ringcentral_user"/>
                <button name="action_send_sms" type="object" string="SMS" icon="fa-comment" groups="ringcentral_base.group_ringcentral_user"/>
                <button name="action_schedule_meeting" type="object" string="Meeting" icon="fa-video-camera" groups="ringcentral_base.group_ringcentral_user"/>
            </xpath>
            
            <!-- Add phone field with click-to-call widget -->
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="widget">phone_call</attribute>
            </xpath>
            
            <!-- Add mobile field with click-to-call widget -->
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="widget">phone_call</attribute>
            </xpath>
            
            <!-- Add engagement score -->
            <xpath expr="//field[@name='expected_revenue']" position="after">
                <field name="communication_score" widget="progressbar" options="{'max_value': 100}"/>
            </xpath>
            
            <!-- Add last contact info -->
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Communication" name="communication" groups="ringcentral_base.group_ringcentral_user">
                    <group>
                        <group string="Statistics">
                            <field name="call_count"/>
                            <field name="sms_count"/>
                            <field name="voicemail_count"/>
                        </group>
                        <group string="Last Contact">
                            <field name="last_call_date"/>
                            <field name="last_sms_date"/>
                            <field name="days_since_contact"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    
    <!-- Extend Lead Tree View -->
    <record id="crm_lead_view_tree_ringcentral" model="ir.ui.view">
        <field name="name">crm.lead.tree.ringcentral</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <button name="action_call" type="object" icon="fa-phone" title="Call" class="text-primary" groups="ringcentral_base.group_ringcentral_user"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extend Opportunity Tree View -->
    <record id="crm_case_tree_view_oppor_ringcentral" model="ir.ui.view">
        <field name="name">crm.lead.tree.oppor.ringcentral</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="call_count" string="Calls" optional="hide"/>
                <field name="days_since_contact" string="Days" optional="hide"/>
            </xpath>
        </field>
    </record>
    
    <!-- Add search filters -->
    <record id="crm_lead_view_search_ringcentral" model="ir.ui.view">
        <field name="name">crm.lead.search.ringcentral</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <!-- Filter by user for RingCentral activity -->
                <filter name="filter_my_calls" string="My Recent Calls" domain="[('user_id', '=', uid)]" groups="ringcentral_base.group_ringcentral_user"/>
            </xpath>
        </field>
    </record>
</odoo>
