<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_website" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ringcentral.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="ringcentral_base.res_config_settings_view_form_ringcentral"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='ringcentral_base']" position="inside">
                <block title="Website Widget" name="ringcentral_website_settings">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_website_widget_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_website_widget_enabled"/>
                            <div class="text-muted">Show click-to-call widget on website</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_website_callback_enabled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_website_callback_enabled"/>
                            <div class="text-muted">Allow visitors to request callbacks</div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_website_show_phone"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_website_show_phone"/>
                            <div class="text-muted">
                                <field name="rc_website_phone_number" placeholder="+1 (555) 123-4567"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="rc_website_widget_position"/>
                            <div class="text-muted">
                                <field name="rc_website_widget_position"/>
                            </div>
                        </div>
                    </div>
                </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
