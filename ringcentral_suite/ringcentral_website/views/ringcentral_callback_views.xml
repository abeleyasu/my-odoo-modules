<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Callback Request Tree View -->
    <record id="ringcentral_callback_request_view_tree" model="ir.ui.view">
        <field name="name">ringcentral.callback.request.tree</field>
        <field name="model">ringcentral.callback.request</field>
        <field name="arch" type="xml">
            <list string="Callback Requests" default_order="create_date desc"
                  decoration-warning="state == 'new'"
                  decoration-info="state == 'assigned'"
                  decoration-success="state == 'completed'">
                <field name="name"/>
                <field name="create_date" string="Requested"/>
                <field name="visitor_name"/>
                <field name="visitor_phone"/>
                <field name="subject"/>
                <field name="preferred_time"/>
                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge"/>
                <button name="action_start_callback" type="object" icon="fa-phone" title="Call" invisible="state in ('completed', 'cancelled')"/>
            </list>
        </field>
    </record>
    
    <!-- Callback Request Form View -->
    <record id="ringcentral_callback_request_view_form" model="ir.ui.view">
        <field name="name">ringcentral.callback.request.form</field>
        <field name="model">ringcentral.callback.request</field>
        <field name="arch" type="xml">
            <form string="Callback Request">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_assign_to_me" type="object" string="Assign to Me" invisible="assigned_user_id"/>
                    <button name="action_start_callback" type="object" string="Call Now" class="btn-primary" icon="fa-phone" invisible="state in ('completed', 'cancelled')"/>
                    <button name="action_mark_completed" type="object" string="Mark Completed" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ('completed', 'cancelled')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_lead" type="object" class="oe_stat_button" icon="fa-star" invisible="lead_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Create Lead</span>
                            </div>
                        </button>
                        <button name="action_create_partner" type="object" class="oe_stat_button" icon="fa-user" invisible="partner_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Create Contact</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Visitor Information">
                            <field name="visitor_name"/>
                            <field name="visitor_phone" widget="phone"/>
                            <field name="visitor_email"/>
                        </group>
                        <group string="Request Details">
                            <field name="subject"/>
                            <field name="preferred_time"/>
                            <field name="preferred_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Assignment">
                            <field name="assigned_user_id"/>
                            <field name="callback_date"/>
                        </group>
                        <group string="Related Records">
                            <field name="partner_id"/>
                            <field name="lead_id"/>
                            <field name="call_id"/>
                        </group>
                    </group>
                    <group string="Message" invisible="not message">
                        <field name="message" nolabel="1" colspan="2"/>
                    </group>
                    <group string="Source Tracking" groups="base.group_no_one">
                        <field name="source_url"/>
                        <field name="utm_source"/>
                        <field name="utm_campaign"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Callback Request Kanban View -->
    <record id="ringcentral_callback_request_view_kanban" model="ir.ui.view">
        <field name="name">ringcentral.callback.request.kanban</field>
        <field name="model">ringcentral.callback.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="visitor_name"/>
                <field name="visitor_phone"/>
                <field name="subject"/>
                <field name="state"/>
                <field name="assigned_user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="visitor_name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'new': 'warning', 'assigned': 'info', 'in_progress': 'primary', 'completed': 'success', 'cancelled': 'muted'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="visitor_phone" widget="phone"/>
                                <br/>
                                <small><field name="subject"/></small>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Callback Request Search View -->
    <record id="ringcentral_callback_request_view_search" model="ir.ui.view">
        <field name="name">ringcentral.callback.request.search</field>
        <field name="model">ringcentral.callback.request</field>
        <field name="arch" type="xml">
            <search string="Callback Requests">
                <field name="visitor_name"/>
                <field name="visitor_phone"/>
                <field name="visitor_email"/>
                <filter name="filter_new" string="New" domain="[('state', '=', 'new')]"/>
                <filter name="filter_assigned" string="Assigned" domain="[('state', '=', 'assigned')]"/>
                <filter name="filter_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <separator/>
                <filter name="filter_my" string="My Requests" domain="[('assigned_user_id', '=', uid)]"/>
                <filter name="filter_unassigned" string="Unassigned" domain="[('assigned_user_id', '=', False)]"/>
                <separator/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_user" string="Assigned To" context="{'group_by': 'assigned_user_id'}"/>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_ringcentral_callback_request" model="ir.actions.act_window">
        <field name="name">Callback Requests</field>
        <field name="res_model">ringcentral.callback.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="ringcentral_callback_request_view_search"/>
        <field name="context">{'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No callback requests yet
            </p>
            <p>
                Website visitors can request callbacks using the click-to-call widget.
            </p>
        </field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_ringcentral_callback_requests"
              name="Callback Requests"
              parent="ringcentral_base.menu_ringcentral_root"
              action="action_ringcentral_callback_request"
              sequence="40"/>
</odoo>
