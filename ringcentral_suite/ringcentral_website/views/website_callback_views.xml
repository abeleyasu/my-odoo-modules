<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Callback Request Tree View -->
    <record id="website_callback_request_view_tree" model="ir.ui.view">
        <field name="name">website.callback.request.tree</field>
        <field name="model">website.callback.request</field>
        <field name="arch" type="xml">
            <list string="Callback Requests" default_order="create_date desc"
                  decoration-info="state == 'new'"
                  decoration-warning="state == 'assigned'"
                  decoration-success="state == 'completed'"
                  decoration-danger="state == 'no_answer'">
                <field name="create_date" string="Requested"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="preferred_time"/>
                <field name="state" widget="badge"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <button name="action_call" type="object" icon="fa-phone" title="Call" invisible="state not in ('new', 'assigned', 'no_answer')"/>
                <button name="action_assign_to_me" type="object" icon="fa-user" title="Assign to Me" invisible="state != 'new'"/>
            </list>
        </field>
    </record>
    
    <!-- Callback Request Form View -->
    <record id="website_callback_request_view_form" model="ir.ui.view">
        <field name="name">website.callback.request.form</field>
        <field name="model">website.callback.request</field>
        <field name="arch" type="xml">
            <form string="Callback Request">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_assign_to_me" type="object" string="Assign to Me" class="btn-primary" invisible="state != 'new'"/>
                    <button name="action_call" type="object" string="Call Now" class="btn-success" icon="fa-phone" invisible="state not in ('new', 'assigned', 'no_answer')"/>
                    <button name="action_mark_completed" type="object" string="Completed" invisible="state != 'calling'"/>
                    <button name="action_mark_no_answer" type="object" string="No Answer" invisible="state != 'calling'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ('completed', 'cancelled')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_lead" type="object" class="oe_stat_button" icon="fa-filter" invisible="lead_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Create Lead</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group string="Contact Info">
                            <field name="name"/>
                            <field name="phone" widget="phone"/>
                            <field name="email"/>
                            <field name="partner_id"/>
                        </group>
                        <group string="Request">
                            <field name="preferred_time"/>
                            <field name="user_id"/>
                            <field name="callback_time"/>
                        </group>
                    </group>
                    <group string="Message" invisible="not message">
                        <field name="message" nolabel="1" colspan="2"/>
                    </group>
                    <group string="Related">
                        <field name="call_id"/>
                        <field name="lead_id"/>
                    </group>
                    <group string="Tracking" groups="ringcentral_base.group_ringcentral_admin">
                        <field name="source_url"/>
                        <field name="ip_address"/>
                        <field name="user_agent"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" colspan="2"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Callback Request Kanban View -->
    <record id="website_callback_request_view_kanban" model="ir.ui.view">
        <field name="name">website.callback.request.kanban</field>
        <field name="model">website.callback.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="phone"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="phone" widget="phone"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <a t-if="record.phone.raw_value" name="action_call" type="object" class="btn btn-sm btn-success">
                                        <i class="fa fa-phone"/> Call
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Callback Request Search View -->
    <record id="website_callback_request_view_search" model="ir.ui.view">
        <field name="name">website.callback.request.search</field>
        <field name="model">website.callback.request</field>
        <field name="arch" type="xml">
            <search string="Callback Requests">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <filter name="filter_new" string="New" domain="[('state', '=', 'new')]"/>
                <filter name="filter_assigned" string="Assigned" domain="[('state', '=', 'assigned')]"/>
                <filter name="filter_pending" string="Pending" domain="[('state', 'in', ('new', 'assigned'))]"/>
                <separator/>
                <filter name="filter_my" string="My Requests" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_user" string="Assigned To" context="{'group_by': 'user_id'}"/>
                <filter name="group_date" string="Date" context="{'group_by': 'create_date:day'}"/>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_website_callback_request" model="ir.actions.act_window">
        <field name="name">Callback Requests</field>
        <field name="res_model">website.callback.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="website_callback_request_view_search"/>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No callback requests yet
            </p>
        </field>
    </record>
</odoo>
