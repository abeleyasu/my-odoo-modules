<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequences -->
    <record id="seq_compliance_consent" model="ir.sequence">
        <field name="name">RingCentral Consent</field>
        <field name="code">ringcentral.compliance.consent</field>
        <field name="prefix">CONSENT-</field>
        <field name="padding">6</field>
    </record>
    
    <record id="seq_compliance_request" model="ir.sequence">
        <field name="name">RingCentral Compliance Request</field>
        <field name="code">ringcentral.compliance.request</field>
        <field name="prefix">DSR-</field>
        <field name="padding">6</field>
    </record>
    
    <!-- Server action for consent expiry check -->
    <record id="ir_actions_server_check_consent_expiry" model="ir.actions.server">
        <field name="name">RingCentral: Check Consent Expiry</field>
        <field name="model_id" ref="model_ringcentral_compliance_consent"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_expiry()</field>
    </record>
    
    <!-- Cron Jobs -->
    <record id="cron_check_consent_expiry" model="ir.cron">
        <field name="name">RingCentral: Check Consent Expiry</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="ir_actions_server_id" ref="ir_actions_server_check_consent_expiry"/>
    </record>
</odoo>
