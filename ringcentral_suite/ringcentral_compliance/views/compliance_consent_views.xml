<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Consent Tree View -->
    <record id="compliance_consent_view_tree" model="ir.ui.view">
        <field name="name">ringcentral.compliance.consent.tree</field>
        <field name="model">ringcentral.compliance.consent</field>
        <field name="arch" type="xml">
            <list string="Consent Records"
                  decoration-success="state == 'granted'"
                  decoration-danger="state in ('denied', 'withdrawn')"
                  decoration-muted="state == 'expired'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="consent_type"/>
                <field name="consent_method"/>
                <field name="consent_date"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge"/>
                <field name="verified" widget="boolean"/>
            </list>
        </field>
    </record>
    
    <!-- Consent Form View -->
    <record id="compliance_consent_view_form" model="ir.ui.view">
        <field name="name">ringcentral.compliance.consent.form</field>
        <field name="model">ringcentral.compliance.consent</field>
        <field name="arch" type="xml">
            <form string="Consent Record">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_grant" type="object" string="Grant" class="btn-success" invisible="state != 'pending'"/>
                    <button name="action_deny" type="object" string="Deny" invisible="state != 'pending'"/>
                    <button name="action_withdraw" type="object" string="Withdraw" invisible="state not in ('granted', 'pending')"/>
                    <button name="action_verify" type="object" string="Verify" invisible="verified or state != 'granted'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Contact">
                            <field name="partner_id"/>
                            <field name="consent_type"/>
                            <field name="consent_method"/>
                        </group>
                        <group string="Dates">
                            <field name="consent_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Legal Basis">
                            <field name="legal_basis"/>
                            <field name="recording_id"/>
                        </group>
                        <group string="Verification">
                            <field name="verified"/>
                            <field name="verified_by"/>
                            <field name="verification_date"/>
                        </group>
                    </group>
                    <group string="Additional Information">
                        <field name="notes"/>
                    </group>
                    <group string="Technical Details" groups="ringcentral_base.group_ringcentral_admin">
                        <field name="ip_address"/>
                        <field name="user_agent"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Consent Search View -->
    <record id="compliance_consent_view_search" model="ir.ui.view">
        <field name="name">ringcentral.compliance.consent.search</field>
        <field name="model">ringcentral.compliance.consent</field>
        <field name="arch" type="xml">
            <search string="Consent Records">
                <field name="partner_id"/>
                <field name="consent_type"/>
                <filter name="filter_granted" string="Granted" domain="[('state', '=', 'granted')]"/>
                <filter name="filter_pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="filter_withdrawn" string="Withdrawn" domain="[('state', '=', 'withdrawn')]"/>
                <separator/>
                <filter name="filter_verified" string="Verified" domain="[('verified', '=', True)]"/>
                <filter name="filter_expiring" string="Expiring Soon" domain="[('expiry_date', '&lt;=', (context_today() + relativedelta(days=30)).strftime('%Y-%m-%d')), ('state', '=', 'granted')]"/>
                <separator/>
                <filter name="group_type" string="Type" context="{'group_by': 'consent_type'}"/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_partner" string="Contact" context="{'group_by': 'partner_id'}"/>
            </search>
        </field>
    </record>
    
    <!-- Consent Action -->
    <record id="action_compliance_consent" model="ir.actions.act_window">
        <field name="name">Consent Records</field>
        <field name="res_model">ringcentral.compliance.consent</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="compliance_consent_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No consent records yet
            </p>
        </field>
    </record>
</odoo>
