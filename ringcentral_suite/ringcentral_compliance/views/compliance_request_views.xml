<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Compliance Request Tree View -->
    <record id="compliance_request_view_tree" model="ir.ui.view">
        <field name="name">ringcentral.compliance.request.tree</field>
        <field name="model">ringcentral.compliance.request</field>
        <field name="arch" type="xml">
            <list string="Data Subject Requests"
                  decoration-danger="is_overdue"
                  decoration-warning="days_remaining &gt;= 0 and days_remaining &lt;= 7">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="request_type"/>
                <field name="regulation"/>
                <field name="request_date"/>
                <field name="due_date"/>
                <field name="days_remaining"/>
                <field name="state" widget="badge"/>
                <field name="assigned_to" widget="many2one_avatar_user"/>
                <field name="is_overdue" column_invisible="True"/>
            </list>
        </field>
    </record>
    
    <!-- Compliance Request Form View -->
    <record id="compliance_request_view_form" model="ir.ui.view">
        <field name="name">ringcentral.compliance.request.form</field>
        <field name="model">ringcentral.compliance.request</field>
        <field name="arch" type="xml">
            <form string="Data Subject Request">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_verify_identity" type="object" string="Verify Identity" class="btn-primary" invisible="state != 'new'"/>
                    <button name="action_process" type="object" string="Start Processing" invisible="state != 'verified'"/>
                    <button name="action_execute_access" type="object" string="Export Data" class="btn-success" invisible="state != 'processing' or request_type != 'access'"/>
                    <button name="action_execute_erasure" type="object" string="Execute Erasure" class="btn-danger" invisible="state != 'processing' or request_type != 'erasure'"/>
                    <button name="action_complete" type="object" string="Complete" class="btn-success" invisible="state != 'processing'"/>
                    <button name="action_deny" type="object" string="Deny" invisible="state in ('completed', 'denied')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-clock-o" invisible="state in ('completed', 'denied')">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="days_remaining"/>
                                </span>
                                <span class="o_stat_text">Days Left</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Overdue" bg_color="text-bg-danger" invisible="not is_overdue"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Request">
                            <field name="partner_id"/>
                            <field name="request_type"/>
                            <field name="regulation"/>
                        </group>
                        <group string="Timeline">
                            <field name="request_date"/>
                            <field name="due_date"/>
                            <field name="completed_date"/>
                            <field name="assigned_to"/>
                        </group>
                    </group>
                    <group string="Data Scope" invisible="request_type not in ('access', 'erasure', 'portability')">
                        <field name="data_categories"/>
                        <group invisible="data_categories != 'selected'">
                            <field name="include_calls"/>
                            <field name="include_sms"/>
                            <field name="include_recordings"/>
                            <field name="include_voicemails"/>
                        </group>
                    </group>
                    <group string="Results" invisible="state not in ('processing', 'completed')">
                        <field name="data_export" filename="data_export_filename"/>
                        <field name="data_export_filename" invisible="1"/>
                        <field name="deletion_log" invisible="request_type != 'erasure'"/>
                    </group>
                    <group string="Denial" invisible="state != 'denied'">
                        <field name="denial_reason"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                    <field name="is_overdue" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Compliance Request Search View -->
    <record id="compliance_request_view_search" model="ir.ui.view">
        <field name="name">ringcentral.compliance.request.search</field>
        <field name="model">ringcentral.compliance.request</field>
        <field name="arch" type="xml">
            <search string="Compliance Requests">
                <field name="partner_id"/>
                <field name="name"/>
                <filter name="filter_new" string="New" domain="[('state', '=', 'new')]"/>
                <filter name="filter_processing" string="Processing" domain="[('state', 'in', ('verified', 'processing'))]"/>
                <filter name="filter_overdue" string="Overdue" domain="[('due_date', '&lt;', (context_today()).strftime('%Y-%m-%d')), ('state', 'not in', ('completed', 'rejected'))]"/>
                <separator/>
                <filter name="filter_gdpr" string="GDPR" domain="[('regulation', '=', 'gdpr')]"/>
                <filter name="filter_ccpa" string="CCPA" domain="[('regulation', '=', 'ccpa')]"/>
                <separator/>
                <filter name="group_type" string="Type" context="{'group_by': 'request_type'}"/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_regulation" string="Regulation" context="{'group_by': 'regulation'}"/>
            </search>
        </field>
    </record>
    
    <!-- Compliance Request Kanban View -->
    <record id="compliance_request_view_kanban" model="ir.ui.view">
        <field name="name">ringcentral.compliance.request.kanban</field>
        <field name="model">ringcentral.compliance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="request_type"/>
                <field name="days_remaining"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'border-danger' : ''}">
                            <div class="o_kanban_record_top">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id"/>
                                <div><field name="request_type"/></div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span t-if="record.is_overdue.raw_value" class="badge bg-danger">Overdue</span>
                                <span t-else="" class="text-muted">
                                    <field name="days_remaining"/> days left
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Compliance Request Action -->
    <record id="action_compliance_request" model="ir.actions.act_window">
        <field name="name">Data Subject Requests</field>
        <field name="res_model">ringcentral.compliance.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="compliance_request_view_search"/>
        <field name="context">{'search_default_filter_processing': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data subject requests yet
            </p>
        </field>
    </record>
    
    <!-- Audit Log Tree View -->
    <record id="compliance_audit_log_view_tree" model="ir.ui.view">
        <field name="name">ringcentral.compliance.audit.log.tree</field>
        <field name="model">ringcentral.compliance.audit.log</field>
        <field name="arch" type="xml">
            <list string="Audit Log" create="false" edit="false" delete="false">
                <field name="create_date"/>
                <field name="action"/>
                <field name="description"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="record_reference"/>
            </list>
        </field>
    </record>
    
    <!-- Audit Log Action -->
    <record id="action_compliance_audit_log" model="ir.actions.act_window">
        <field name="name">Audit Log</field>
        <field name="res_model">ringcentral.compliance.audit.log</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
