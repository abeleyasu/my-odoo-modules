<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_recording" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ringcentral.recording</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="ringcentral_base.res_config_settings_view_form_ringcentral"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='ringcentral_base']" position="inside">
                <h2>Recording Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_enable_recording"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_enable_recording"/>
                            <div class="text-muted">Enable call recording functionality</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_auto_download_recordings"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_auto_download_recordings"/>
                            <div class="text-muted">Automatically download recordings from RingCentral</div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_auto_record_all"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_auto_record_all"/>
                            <div class="text-muted">Automatically record all calls</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="rc_default_retention_policy_id"/>
                            <div class="text-muted">
                                <field name="rc_default_retention_policy_id" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
                
                <h3 class="mt16">Transcription</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_auto_transcribe"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_auto_transcribe"/>
                            <div class="text-muted">Automatically transcribe recordings</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="rc_transcription_language"/>
                            <div class="text-muted">
                                <field name="rc_transcription_language"/>
                            </div>
                        </div>
                    </div>
                </div>
                
                <h3 class="mt16">Consent</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_require_consent"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_require_consent"/>
                            <div class="text-muted">Require consent before recording</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rc_consent_announcement"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rc_consent_announcement"/>
                            <div class="text-muted">Play consent announcement at start of call</div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
